@{
    ViewBag.Title = "系統登入";
    ViewBag.BodyClass = "Login";
    ViewBag.IsFirstPage = true;
    Layout = "~/Views/Shared/Layout.cshtml";
}

<div class="login-form col-md-8 center-block">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title">@Resources.Res.System_Name :: @ViewBag.Title</h3>
        </div>
        <form action="">
            <div class="panel-body">
                <div class="form-group">
                    <label for="">帳號</label>
                    <input type="text" class="form-control">
                </div>
                <hr>
                <div class="form-group">
                    <label for="">密碼</label>
                    <input type="password" class="form-control">
                </div>
                <hr>
                <div class="form-group">
                    <label for="" class="sr-only">驗證碼</label>
                    <div class="center-block">
                        <img src="http://localhost:3313/_Code/Ashx/ValidateCode.ashx?vn=CheckCode&t=1430727501058" alt="" width="100%">
                    </div>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control">
                    <small class="help-block">
                        請輸入圖片中的文字
                        <button class="btn-link pull-right">換另一張圖</button>
                    </small>
                </div>
            </div>
            <div class="panel-footer">
                <button class="btn btn-success btn-lg btn-block">確定登入</button>
            </div>
        </form>
    </div>
</div>